<h1>Telescopes</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% telescopes.each do |telescope| %>
      <tr>
        <td><%= telescope.name %></td>
        <td><%= link_to 'Show', telescope %></td>
        <td><%= link_to 'Edit', edit_telescope_path(telescope) %></td>
        <td><%= link_to 'Destroy', telescope, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Telescope', new_telescope_path %>
