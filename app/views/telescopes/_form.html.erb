<%= simple_nested_form_for(telescope) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  </div>

  <div class="form-actions">
    <%= f.input :name %>

    <div class="form-group">
      <label style="display:block">Time Slots</label>
      <%= f.fields_for :slots do |slot_fields| %>
        <%= slot_fields.input_field :scheduled_at %>
      <% end %>
      <%= f.link_to_add 'Add a time slot', :slots %>
    </div>
    <%= f.button :submit %>
  </div>
<% end %>
