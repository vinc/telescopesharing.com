<h1><%= telescope.name %></h1>

<p><%= telescope.description %></p>

<%= render "reservations/form" %>

<p id="notice"><%= notice %></p>

<hr>

<div id="map" style="width:100%;height:200px"></div>

<script>
  var map = L.map('map', { maxZoom: 7 }).setView([50, 0], 5);

  L.tileLayer('http://{s}.tile.osm.org/{z}/{x}/{y}.png', {
    attribution: '&copy; <a href="http://osm.org/copyright">OpenStreetMap</a> contributors'
  }).addTo(map);

  L.marker(<%= telescope.coordinates.reverse.to_json.html_safe %>)
    .addTo(map);
</script>

<hr>

<%= link_to "Edit", edit_telescope_path(telescope) %> |
<%= link_to "Back", telescopes_path %>
