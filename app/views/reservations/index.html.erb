<p id="notice"><%= notice %></p>

<h1>Listing Reservations</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.scheduled_at.to_formatted_s(:long) %></td>
        <td><%= link_to 'Show', telescope_reservation_path(telescope, reservation) %></td>
        <td><%= link_to 'Edit', edit_telescope_reservation_path(telescope, reservation) %></td>
        <td><%= link_to 'Destroy', telescope_reservation_path(telescope, reservation), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

