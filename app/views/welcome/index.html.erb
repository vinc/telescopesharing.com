<div class="page-header">
  <h1>TelescopeSharing</h1>
  <p>Rent a remote telescope and explore the heaven from your home.</p>
</div>

<p id="notice"><%= notice %></p>

<div id="map" style="width:100%;height:400px"></div>

<script>
  var map = L.map('map', { minZoom: 1, maxZoom: 7 });

  L.tileLayer('http://{s}.tile.osm.org/{z}/{x}/{y}.png', {
    attribution: '<a href="http://osm.org/copyright">OpenStreetMap</a>'
  }).addTo(map);

  /*
  L.tileLayer('http://map1.vis.earthdata.nasa.gov/wmts-webmerc/VIIRS_CityLights_2012/default/{time}/{tilematrixset}{maxZoom}/{z}/{y}/{x}.{format}', {
    attribution: 'GIBS/NASA',
    bounds: [[-85.0511287776, -179.999999975], [85.0511287776, 179.999999975]],
    format: 'jpg',
    minZoom: 1,
    maxZoom: 8,
    time: '',
    tilematrixset: 'GoogleMapsCompatible_Level'
  }).addTo(map);
  */

  var markers = [];

  <% telescopes.each do |telescope| %>
    <% unless telescope.coordinates.nil? %>
      var html =
        '<h3>' + <%= telescope.name.to_json.html_safe %> + '</h3>' +
        '<p>' + <%= telescope.description.to_json.html_safe %> + '</p>' +
        '<p>' + '<%= link_to "Check availability", telescope_path(telescope) %>' + '</p>';

      markers.push(L.marker(<%= telescope.coordinates.reverse.to_json.html_safe %>)
        .bindPopup(html)
        .addTo(map));
    <% end %>
  <% end %>

  map.fitBounds(L.featureGroup(markers).getBounds(), { maxZoom: 5 });
</script>
